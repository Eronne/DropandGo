{% extends 'template.html.twig' %}

{% block title %} - {{ 'page.welcome' | trans() }}{% endblock %}

{% block body %}
    <div class="home">
        <div class="overlay">
            {% include 'components/menu.html.twig' %}

            <div class="intro">
                <h1>{{ 'intro.title' | trans }}</h1>
                <a href="{{ path('fos_user_registration_register') }}" class="ui teal big button">{{ 'intro.button' | trans }}</a>
            </div>
        </div>

        {# Arrow to smooth scroll #}
        <a class="arrow-wrap" href="#presentation">
            <span class="arrow"></span>
        </a>
    </div>


    <div class="ui stackable two column grid" id="presentation">
        <div class="row">
            <div class="column">
                <img src="{{ asset('img/homepage/computer.png') }}" alt="">
            </div>
            <div class="column text first">
                <h2>{{ 'd1.title' | trans }}</h2>
            </div>
        </div>

        <div class="row">
            <div class="column text second">
                <h2>{{ 'd2.title' | trans }}</h2>
            </div>
            <div class="column">
                <img src="{{ asset('img/homepage/devices.png') }}" alt="">
            </div>
        </div>
    </div>

    <div class="try">
        <h1>{{ 'd3.title' | trans }}</h1>
        <a href="{{ path('fos_user_registration_register') }}" class="ui teal button">{{ 'd3.button' | trans }}</a>
    </div>

    {% include 'components/footer.html.twig' %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}